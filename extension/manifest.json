{
    "manifest_version": 3,
    "name": "AirPlay Audio Sender",
    "version": "2.0.0",
    "description": "Send tab/system audio from a Chromebook to an Apple TV on the local network.",
    "permissions": ["storage"],
    "host_permissions": ["http://localhost:8090/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_title": "AirPlay Audio Sender"
    },
    "icons": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  